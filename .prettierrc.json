{
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "parser": "flow",
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": true
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript",
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": true
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "parser": "css",
        "tabWidth": 4
      }
    }
  ]
}
